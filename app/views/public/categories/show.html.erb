

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>商品情報一覧　【カテゴリ：<%= @category.name %>】</h2>
      <!-- ジャンル一覧表示 -->
      <table class="table table-hover table-bordered table-inverse">
          <thead class="table-secondary">
        　　　　<th>メーカー名</th>
              <th>商品名</th>
              <th>更新日時</th>
          </thead>
          <tbody>
              <% @items.each do |item| %>
                  <tr>
                      <td><%= link_to item.admin.name,admin_path(item.admin) %></td>
                      <td><%= link_to item.name,item_path(item) %></td>
                      <td><%= item.updated_at %></td>
                　</tr>
              <% end %>
          </tbody>
      </table>
      <!-- ジャンル一覧表示ここまで -->
      <%= paginate @items %>
      <%= link_to "トップページへ戻る",root_path, class: 'btn btn-success'  %>
    </div>
  </div>
</div>