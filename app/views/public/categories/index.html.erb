<h3>public/categories/index</h3>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <h2>カテゴリ一覧</h2>
      
      <!-- ジャンル一覧表示 -->
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>カテゴリ</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- ジャンル一覧表示ここまで -->
      <%= paginate @categories %>
    </div>
  </div>
</div>