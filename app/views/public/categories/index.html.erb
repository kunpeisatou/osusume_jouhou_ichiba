<%= render 'public/customers/header' %>
<h3>public/categories/index</h3>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <div id="box">
        <div id="images">
          <div class="image1"></div>
          <div class="image2"></div>
          <div class="image3"></div>
          <div class="image4"></div>
        </div>
      </div>
      <h2>カテゴリ一覧★</h2>
      
      <!-- ジャンル一覧表示 -->
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>カテゴリ</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= link_to category.name,category_path(category) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- ジャンル一覧表示ここまで -->
      <%= paginate @categories %>
    </div>
      <h2 class="section-ttl">登録がお済みでない方</h2>
      <p><%= link_to "こちら", new_customer_registration_path, class: "underline" %>から新規登録を行なってください。</p>
      <h2 class="section-ttl">既に登録済みの方</h2>
      <p><%= link_to "こちら", new_customer_session_path, class: "underline" %>からログインしてください。</p>
  </div>
</div>
<div class="card-list-container pt-3 row">
  <% @items.each do |item| %>
    <div class="card mr-2 mt-4 shadow-lg">
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 200, 150 ,class:"card-img-top py-2 px-2";%>
      <% end %>
      <div class="card-body">
        <div class="card-title">
          <%= link_to item.name,item_path(item) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
