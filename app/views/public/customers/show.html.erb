<%= render 'public/customers/header' %>
<h4><%= current_customer.last_name + current_customer.first_name %>様のお気に入り商品</h4>
<%= link_to"登録内容を編集する",edit_customer_path(@customer.id) ,class:"btn btn-sm btn-success"%>

        <table class="table table-hover table-bordered table-inverse">
          <thead class="table-secondary">
        　　　　<th>メーカー名</th>
              <th>商品名</th>
              <th>カテゴリ</th>
              <th>更新日時</th>
          </thead>
          <tbody>
              <% @items.each do |item| %>
                  <tr>
                      <td><%= link_to item.admin.name,admin_path(item.admin) %></td>
                      <td><%= link_to item.name,item_path(item) %></td>
                      <td><%= item.category.name %></td>
                      <td><%= item.updated_at %></td>
                　</tr>
              <% end %>
          </tbody>
        </table>
        <!-- ジャンル一覧表示ここまで -->
        <%= paginate @items %>