<%= render 'manage/admins/header' %>
<h3>manage/admins/index</h3>
<%= link_to "メーカー情報編集",edit_manage_admin_path(current_admin), class: 'btn btn-success'  %>
<%= link_to "カテゴリ登録",manage_categories_path, class: 'btn btn-success'  %>

<div class="d-flex">
    <h2 class="table-secondary mb-3 ml-3 d-inline">登録メーカー一覧</h2>
</div>
<table class="table table-hover table-bordered table-inverse">
    <thead class="table-secondary">
        <th>メーカー名</th>
        <th>登録日</th>
    </thead>
    <tbody>
        <% @admins.each do |admin| %>
            <tr>
                <td><%= admin.name %></td>
                <td><%= admin.created_at %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @admins %>