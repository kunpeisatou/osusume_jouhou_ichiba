<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='container px-5 px-sm-0'>
      <h2>会社名:<%= @admin.name %></h2>
      <div class='row'>
        <div class='col-md-5'>
          <%= attachment_image_tag @admin, :image, :fill, 300, 300, fallback: "no_image.jpg" %>
        </div>
        <div class='col-md-7'>
          <h2>プロフィール</h2>
          <%= @admin.introduction %>
          <% if @admin == current_admin %>
            <div class='separate'>
              <%= link_to "登録内容を編集する", edit_manage_admin_path(@admin), class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    
    
    <!-- 投稿一覧 -->
    <div class="d-flex separate">
      <h2 class="table-secondary mb-3 ml-3 d-inline"><%= @admin.name %>の商品記事一覧</h2>
    </div>
    <table class="table table-hover table-bordered table-inverse">
      <thead class="table-secondary">
      　<th>メーカー名</th>
        <th>商品名</th>
        <th>カテゴリー</th>
        <th>更新日時</th>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.admin.name %></td>
            <td><%= link_to item.name,manage_item_path(item) %></td>
            <td><%= link_to item.category.name,manage_category_path(item.category) %></td>
            <td><%= item.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
    
    <%= link_to "メーカー一覧へ戻る",manage_admins_path, class: 'btn btn-success'  %>
  </div>  
</div>