<%= render 'manage/admins/header' %>
<h3>manage/items/show</h3>
<%= link_to "カテゴリ一覧へ",manage_categories_path, class: 'btn btn-success'  %>
<h2>商品情報一覧　【カテゴリ：<%= @category.name %>】</h2>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
      <!-- ジャンル一覧表示 -->
      <table class="table table-hover table-bordered table-inverse">
          <thead class="table-secondary">
        　　　　<th>メーカー名</th>
              <th>商品名</th>
              <th>更新日時</th>
          </thead>
          <tbody>
              <% @items.each do |item| %>
                  <tr>
                      <td><%= item.admin.name %></td>
                      <td><%= link_to item.name,manage_item_path(item) %></td>
                      <td><%= item.updated_at %></td>
                　</tr>
              <% end %>
          </tbody>
      </table>
      <!-- ジャンル一覧表示ここまで -->
      <%= paginate @items %>
    </div>
  </div>
</div>