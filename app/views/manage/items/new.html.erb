  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
     
      <div class="col-sm-10 px-sm-0 mx-auto md-5">
        <!--エラーメッセージここから-->
        <% if @item.errors.any? %>
          <div id="error_explanation">
            <h3><%= @item.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <!--エラーメッセージここまで-->
        <h1>商品新規投稿</h1>
        <%= form_with url:manage_items_path, model:@item, local:true do |f| %>
          <table>
            <tr>
              <th>商品画像</th>
              <th><%= f.attachment_field :image %></th>
            </tr>
            <tr>
              <th>商品名</th>
              <th><%= f.text_field :name , :size=>"30"%></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= f.text_area :introduction , :size=>"33x5"%></th>
            </tr>
            <tr>
              <th>カテゴリ</th>
              <th><%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "-- 選択してください --"  %></th>
            </tr>
            <tr>
              <th>
              <%= f.submit '新規登録', class: " offset-sm-8 btn btn-outline-success" %>
              </th>
            </tr>
          </table >
        <% end %>
        <div class='separate'>
          <%= link_to "投稿一覧へ戻る",manage_items_path, class: 'btn btn-success'  %>
        </div>
        
      </div>
    </div>
  </div>