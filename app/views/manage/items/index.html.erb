<%= render 'manage/admins/header' %>
<h3>manage/items/index</h3>
<p><%#= link_to "詳細画面へ", manage_item_path, class: "btn btn-outline-success" %></p>
<p><%#= link_to "詳細画面へ", manage_item_path(@item), class: "btn btn-outline-success" %></p>
<%= link_to "メーカー情報編集",edit_manage_admin_path(current_admin), class: 'btn btn-success'  %>
<%= link_to "カテゴリ登録",manage_categories_path, class: 'btn btn-success'  %>

<div class="d-flex">
    <h2 class="table-secondary mb-3 ml-3 d-inline">商品説明一覧</h2>
    <div class="d-inline ml-auto mb-3">
        <%= link_to "商品新規追加",new_manage_item_path, class: 'btn btn-success'  %>
    </div>
</div>
<table class="table table-hover table-bordered table-inverse">
    <thead class="table-secondary">
  　　　　<th>メーカー名</th>
        <th>商品名</th>
        <th>カテゴリ</th>
        <th>更新日時</th>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <tr>
                <td><%= item.id %><%= item.admin.name %></td>
                <td><%= link_to item.name,manage_item_path(item) %></td>
                <td><%= item.category.name %></td>
                <td><%= item.updated_at %></td>
          　</tr>
        <% end %>
    </tbody>
</table>
<%#= paginate @items %>