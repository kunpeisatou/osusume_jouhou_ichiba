<!DOCTYPE html>
<html>
  <head>
    <title>OsusumeJouhouIchiba</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %> 

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header class="admin_header">
      <% if admin_signed_in? %>
          <div class="header-content">
            <%= link_to 'NaganoCake', manage_root_path, class: "logo" %>
            <ul class="flex">
              <li><%= link_to '商品一覧', manage_items_path %></li>
              <li><%= link_to 'カテゴリ一覧', manage_categories_path %></li>
              <li><%= link_to '登録内容編集', edit_manage_admin_path(current_admin) %></li>
              <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
            </ul>
            <%= form_tag(manage_search_path, method: :get) do %>
              <%= text_field_tag "search[content]", "", :placeholder =>"会員: 姓,名,セイ,メイ / 商品: 商品名" %>
              <%= select_tag "search[model]", options_for_select({ "会員" => "customer", "商品" => "item" }) %>
              <%= select_tag "search[method]", options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
              <%= submit_tag '検索', class: "btn btn-primary" %>
            <% end %>
          </div>
      <% else %>
          <div class="header-content">
            <%= link_to 'NaganoCake', manage_root_path, class: "logo" %>
            <ul class="flex">
              <li><%= link_to '新規登録', new_admin_registration_path %></li>
              <li><%= link_to 'ログイン', new_admin_session_path %></li>
            </ul>
          </div>
      <% end %>
    </header>
    
    
    <main>
      <%= yield %>
    </main>
    
    <footer class="text-center", style="height:50px">
      <div class="container">
        <div class="footer_copyright">
          金属バット
        </div>
      </div>
    </footer>
  </body>
  
</html>
